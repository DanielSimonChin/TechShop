    "license": "MIT",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "mongoose": "^8.0.3"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^2.0.22"
    }
}
